<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/nodeId"
        style="@style/TrackNameTextStyle"
        android:layout_marginVertical="@dimen/node_margin_vertical"
        android:layout_marginEnd="@dimen/node_name_horizontal_end"
        android:text="@string/node_name_placeholder" />

    <ImageView
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:layout_marginVertical="@dimen/node_margin_vertical"
        android:src="@drawable/arrow_forward" />
</FrameLayout>